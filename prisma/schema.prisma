generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  phone        String
  password     String
  situation    Int           @default(1)
  createdAt    DateTime      @default(now())
  groups       Group[]

  @@map("users")
}

model Group {
  id        Int                @id @default(autoincrement())
  userId    Int
  name      String
  date      DateTime           @db.Date
  situation Int                @default(1)
  createdAt DateTime           @default(now())
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  participants Participant[]
  expenses  Expense[]

  @@map("user_groups")
}

model Expense {
  id        Int      @id @default(autoincrement())
  groupId   Int
  name      String
  value     Decimal
  situation Int      @default(1)
  createdAt DateTime @default(now())
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@map("expenses")
}

model Participant {
  id        Int      @id @default(autoincrement())
  groupId   Int
  name      String
  situation Int      @default(1)
  createdAt DateTime @default(now())
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@map("participants")
}
